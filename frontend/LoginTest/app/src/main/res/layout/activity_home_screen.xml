<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen_TextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeScreen"
    android:background = "@drawable/homescreenbackground">

    <TextView
        android:id="@+id/textView_home"
        android:layout_width="397dp"
        android:layout_height="54dp"
        android:text="Trail Traveler"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159" />

    <TextView
        android:id="@+id/activity_home_screen_testTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.676" />

    <TextView
        android:id="@+id/txtCurrentWeather"
        android:layout_width="395dp"
        android:layout_height="41dp"
        android:fontFamily="sans-serif-medium"
        android:text="Current Weather for desired location"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtUserTemp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_home"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtUserTemp"
        android:layout_width="390dp"
        android:layout_height="83dp"
        android:text="Current Temperature"
        android:textAlignment="center"
        android:textColor="#E9F19B"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnToWeather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_home"
        app:layout_constraintVertical_bias="0.89" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="67dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_home"
        app:layout_constraintEnd_toStartOf="@+id/activity_home_screen_toUser"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/btnToMap"
        android:layout_width="41dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_home"
        app:layout_constraintEnd_toStartOf="@+id/activity_home_screen_toUser"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622"
        app:srcCompat="@drawable/map" />

    <ImageView
        android:id="@+id/activity_home_screen_toUser"
        android:layout_width="50dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userinfo" />

    <ImageView
        android:id="@+id/btnToWeather"
        android:layout_width="74dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_home_screen_testTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_home"
        app:layout_constraintVertical_bias="0.701"
        app:srcCompat="@drawable/weather" />

</androidx.constraintlayout.widget.ConstraintLayout>